{
  "pluginAlias": "YindlPlatform",
	"pluginType": "platform",
  "schema": {
    "type": "object",
    "properties": {
      "host": {
        "title": "Host",
        "type": "string",
        "default": "192.168.1.251",
        "format": "hostname",
        "required": true
      },
      "port": {
        "title": "Port",
        "type": "number",
        "default": "60002",
        "required": true
      },
      "lights": {
        "title": "Light Devices",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "required": true
            },
            "style": {
              "title": "Style",
              "type": "number",
              "enum": [
                "0",
                "1"
              ],
              "required": true
            },
            "write": {
              "titile": "Write",
              "type": "number",
              "required": true
            },
            "read": {
              "titile": "Read",
              "type": "number",
              "required": true
            }
          }
        }
      }
    }
  }
}
